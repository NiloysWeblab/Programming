#include <iostream>
using namespace std;

int find(int arr[], int size){
    int found = -1;
    cout << "type the finding Number: ";
    int findingNumber;
    cin >> findingNumber;

    for(int i=0; i<size;i++){
        if(findingNumber==arr[i]){
         found = i;
         break;
        }
    }

    return found;
}

int main(){
    //200 random numbers greater than -100 and less than 500
    int arr[] = {198, -57, 245, 301, 402, -32, 472, -18, 120, 153, 378, 47, 216, 438, -98, 363, 487, 297, 242, 389, -74, 37, 134, 281, 199, 426, -44, 404, 164, 91, 232, -96, 362, 445, -27, 75, 348, 109, 124, 210, 394, -72, 148, 440, 364, -61, 136, 282, 123, 290, 419, 59, 431, -31, 23, 258, 80, 154, 256, 423, 66, -22, 87, 181, 112, 466, 162, 496, 25, 285, 79, 144, -50, 178, 386, 140, -49, 211, 382, 389, 434, 238, 103, 499, 340, 284, -37, 161, 85, 297, -3, 158, 294, 98, 81, -60, 361, 233, 413, -39, 243, 450, 271, 328, 284, 299, 354, 155, 125, -12, 172, -97, 334, -77, 185, 58, 272, 455, 302, 384, 194, 11, -26, 481, 140, -43, 90, -5, 379, -53, 220, 100, 143, 174, -36, 315, 335, -34, 422, -88, 275, -70, 419, -24, 336, 410, 237, 127, 211, 463, -16, 491, 489, 265, -42, 60, 228, 117, 214, -83, 24, 161, 108, 193, 246, -38, 132, 41, 206, -58, 275, 437, 449, 365, 318, 444, 356, 299, 474, 391, 273, 438, 116, 197, 421, 250, 201, 86, 30, 375, 437, 202, 102, 486, 351, 56};
    int size = sizeof(arr)/sizeof(arr[0]);
    int foundAt = find(arr, size);
    if(foundAt==-1)
      cout << "This number is not found";
    else 
      cout << "This number found At index " << foundAt << endl;

    return 0;
}
